<% include ../partials/header %>

<div class='container text-center'>
    <h1 class='mt-4'>Edit Comment</h1>
           <form action="/camps/<%=camp_id %>/comments/<%= comment._id%>?_method=PUT" method="POST" class='d-flex justify-content-center m-4'> 
              <div class="col-md-6 col-lg-6">
                  <div class="form-group">
                      <label for="comment">Description:</label>
                      <textarea class="form-control" rows="5" id="comment" name="comment[text]"><%= comment.text%></textarea>
                 </div>
                  <div class="form-group">
                    <button class='btn btn-outline-primary btn-lg btn-block' >Submit</button>
                  </div>
                </div>
            </form>
            <a href="/camps/<%=camp_id %>">Back to this place</a> 
   </div>
 </form>
</div>


