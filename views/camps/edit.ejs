<% include ../partials/header %>

<div class='container text-center'>
    <h1 class='mt-4'>Edit The Camp</h1>
           <form action="/camps/<%=camp._id %>?_method=PUT" method="POST" class='d-flex justify-content-center m-4'> 
              <div class="col-md-6 col-lg-6">
                 <div class="form-group ">
                     <input class='form-control' type="text" name="camp[name]" value='<%= camp.name %>'>
                 </div>
                 <div class="form-group ">
                     <input class='form-control' type="number" name="camp[price]" value="<%= camp.price%>" min='0.01' step='0.01'>
                 </div>
                  <div class="form-group">
                     <input class='form-control' type="text" name="camp[image]" value='<%= camp.image %>'>
                  </div> 
                  <div class="form-group">
                      <label for="comment">Description:</label>
                      <textarea class="form-control" rows="5" id="comment" name="camp[description]"><%= camp.description %></textarea>
                 </div>
                  <div class="form-group">
                    <button class='btn btn-outline-primary btn-lg btn-block' >Submit</button>
                  </div>
                </div>
            </form>
            <a href="/camps">Back to all places</a> 

   </div>
 </form>
</div>


<% include ../partials/footer %>
