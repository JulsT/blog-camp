<% include ../partials/header %>

<div class='container text-center'>
    <h1 class='mt-4'>Create a New Camp</h1>
           <form action="/camps" method="POST" class='d-flex justify-content-center m-4'> 
              <div class="col-md-6 col-lg-6">
                 <div class="form-group ">
                     <input required class='form-control' type="text" name="name" placeholder="name">
                 </div>
                 <div class="form-group ">
                     <input required class='form-control' type="number" name="price" placeholder="price" min='0.01' step='0.01'>
                 </div>
                  <div class="form-group">
                     <input required class='form-control' type="text" name="image" placeholder="image url">
                  </div> 
                  <div class="form-group">
                      <label for="comment">Description:</label>
                      <textarea required class="form-control" rows="5" id="comment" name="description"></textarea>
                 </div>
                  <div class="form-group">
                    <button class='btn btn-outline-primary btn-lg btn-block' >Submit</button>
                  </div>
                </div>
            </form>
            <a href="/camps">Back to all places</a> 

   </div>
 </form>
</div>


